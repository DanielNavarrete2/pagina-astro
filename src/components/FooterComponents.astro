---
import { FooterData } from "../data/FooterData";
import { SocialData } from "../data/SocialData";
import LogoComponents from "./LogoComponents.astro";
---

<footer class="bg-gradient-to-r from-[#0f172a] via-[#1e293b] to-[#3b0764] text-gray-300">
  <div class="container mx-auto py-20">
    <div class="flex justify-center gap-8">
      <!-- Logo + descripción -->
      <div class="w-full md:w-1/3 lg:w-1/4 text-center md:text-left">
        <LogoComponents />
      </div>

      <!-- Secciones dinámicas -->
      {
        FooterData.map((lista) => (
          <div class="w-full sm:w-1/2 md:w-1/6 text-center md:text-left">
            <h5 class="text-white font-bold text-lg mb-4 tracking-wide">
              {lista.title}
            </h5>
            <ul class="space-y-2">
              {lista.links.map((link) => (
                <li>
                  <a
                    href={link.href}
                    class="text-gray-200 hover:text-gray-100 transition-colors duration-300"
                  >
                    {link.text}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))
      }

      <!-- Redes sociales -->
      <div class="w-1/6 text-left">
        <h5 class="text-white font-semibold text-lg mb-4 tracking-wide">
          {SocialData.title}
        </h5>

        <div class="flex flex-col space-y-2 items-start">
          {
            SocialData.links.map((red) => (
              <a
                href={red.href}
                target="_blank"
                class={`flex items-center text-white transition-colors duration-300 ${red.hoverColor}`}
              >
                <img src={red.icon} alt={red.name} class="w-5 h-5 mr-2" />
                {red.name}
              </a>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</footer>
