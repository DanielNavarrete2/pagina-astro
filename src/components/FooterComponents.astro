---
import { FooterData } from "../data/FooterData";
import { SocialData } from "../data/SocialData";
import LogoComponents from "./LogoComponents.astro";
---
<footer class="bg-gradient-to-r from-[#0f172a] via-[#1e293b] to-[#3b0764] text-gray-300">
  <div class="container mx-auto px-6 py-10 flex flex-col items-center">
    
    <!-- Contenido principal -->
    <div class="w-full grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-6 md:gap-10 text-center md:text-left">
      
      <!-- Logo + descripción -->
      <div class="flex flex-col items-center md:items-start">
        <LogoComponents />
        <p class="text-sm text-gray-400 mt-2 leading-relaxed max-w-xs md:max-w-none">
          Proyecto inspirado en la comunidad de Springfield.  
          Todo sobre tus personajes favoritos.
        </p>
      </div>

      <!-- Secciones dinámicas -->
      {FooterData.map((lista) => (
        <div class="flex flex-col items-center md:items-start">
          <h5 class="text-white font-semibold text-base mb-2 tracking-wide ml-20">
            {lista.title}
          </h5>
          <ul class="space-y-0.5 ml-20">
            {lista.links.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-gray-300 hover:text-yellow-400 transition-colors duration-300 text-sm"
                >
                  {link.text}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}

      <!-- Redes sociales -->
      <div class="flex flex-col items-center ">
        <h5 class="text-white font-semibold text-base mb-2 tracking-wide">
          {SocialData.title}
        </h5>
        <div class="flex flex-col justify-center md:justify-start gap-2">
          {SocialData.links.map((red) => (
            <a
              href={red.href}
              target="_blank"
              class="flex items-center gap-1.5 text-gray-300 hover:text-yellow-400 transition-colors duration-300 text-sm"
            >
              <img src={red.icon} alt={red.name} class="w-5 h-5" />
              <span>{red.name}</span>
            </a>
          ))}
        </div>
      </div>
    </div>

    <!-- Línea inferior -->
    <div class="w-full mt-8 border-t border-gray-700 pt-4 text-center text-xs text-gray-500">
      © {new Date().getFullYear()} The Simpsons API — Todos los derechos reservados.
    </div>
  </div>
</footer>

