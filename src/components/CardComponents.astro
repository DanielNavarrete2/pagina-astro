---
interface Props {
  href: string;
  img: string;
  alt: string;
  title: string;
  subtitle: string;
  detail: string; 
}

const { href, img, alt, title, subtitle, detail } = Astro.props; // <-- Agregado
---
<div
        class="flex flex-col border-gray-200 rounded-xl
         hover:shadow-xl hover:scale-[1.02] transition-all duration-300 overflow-hidden"
>
    <div class="w-60 h-full overflow-hidden rounded-xl">
        <img
                src={img}
                alt={alt}
                class="w-full h-full object-cover"
        />
    </div>

    <div class="flex flex-col flex-grow p-4 text-center">
        <h3 class="text-gray-800 text-lg font-bold leading-tight mb-1 line-clamp-2">
            {subtitle}
        </h3>

        <p class="text-gray-500 text-sm font-medium mb-4">
            {title}
        </p>

        <div class="mt-auto">
            <a href={href}>
                <button
                        class="bg-orange-300 text-white font-bold py-2 px-6 rounded-lg
                 hover:bg-orange-600 transition-colors cursor-pointer"
                >
                    {detail}
                </button>
            </a>
        </div>
    </div>
</div>
