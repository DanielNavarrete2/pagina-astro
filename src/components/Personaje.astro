---
import Layout from "../layouts/Layout.astro";

// Interfaces para tipar los datos de Deezer
interface Album {
  id: number;
  title: string;
  cover: string;
  cover_medium: string;
  cover_big: string;
  release_date: string;
  tracklist: string;
}

// Función para obtener álbums de Deezer
const data = async (): Promise<Album[]> => {
  try {
    const response = await fetch("https://api.deezer.com/search/album?q=PearlJam");
    const result = await response.json();
    return result.data as Album[];
  } catch (error) {
    console.error("Error al obtener datos:", error);
    return [];
  }
};

const albums: Album[] = await data();
---


  <div class="container mx-auto p-10">
    <h1 class="text-3xl font-bold mb-6">Álbums de Coldplay</h1>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
      {albums.map((album) => (
        <div class="bg-gray-100 rounded-lg p-4 shadow hover:shadow-lg transition duration-300">
          <img src={album.cover_medium} alt={album.title} class="w-full h-48 object-cover rounded mb-4"/>
          <h2 class="text-xl font-semibold mb-2">{album.title}</h2>
          <p class="text-gray-600 mb-1">Fecha: {album.release_date || "Desconocida"}</p>
          <a href={album.tracklist} target="_blank" class="text-blue-600 hover:underline">
            Ver pistas
          </a>
        </div>
      ))}
    </div>
  </div>

