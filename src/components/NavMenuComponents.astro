---
import { ItemMenu } from "../data/ItemMenu";
---

<nav class="bg-transparent">
  <ul class="flex flex-row items-center gap-8">
    {
      ItemMenu.map((item) => (
        <li>
          <a 
            href={item.href} 
            class="relative text-black text-lg uppercase tracking-wide transition-all duration-300 hover:text-blue-400 after:content-[''] after:absolute after:left-0 after:bottom-[-4px] after:w-0 after:h-[2px] after:bg-blue-400 hover:after:w-full after:transition-all after:duration-300"
          >
            {item.texto}
          </a>
        </li>
      ))
    }
  </ul>
</nav>
