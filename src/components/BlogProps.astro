---
interface Props{
    img: string;
    alt: string;
    title: string;
    description: string;
    href: string;
    autor: string;
}
const {img,alt,title,description,href,autor}= Astro.props
---

<article class="articulo  ">
    <div>
        <img src={img} alt={alt} class="w-full h-60 object-fill overflow-hidden rounded-t-lg">
    </div>

    <div class="p-4">
        <h3 class="text-lg font-bold mb-1">{title}</h3>
        <p class="text-gray-600 text-sm mb-2  pb-1">{description}</p>
        <div class="flex justify-between items-center">
            <p class="text-gray-500">{autor}</p>
             <a href={href} class="btn-article ">Leer mas</a>  
        </div>
    </div>
</article>