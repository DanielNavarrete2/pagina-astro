<div class="container mx-auto max-w-lg mt-16 mb-16 bg-white rounded-3xl shadow-lg border border-gray-200 px-6 py-10">
    <h2 class="text-3xl font-extrabold mb-8 text-center text-gray-800">Contáctanos</h2>

    <form class="space-y-6" action="https://formsubmit.co/tu-correo@dominio.com" method="POST">
        <div>
            <label for="name" class="block mb-2 font-semibold text-gray-700">Nombre</label>
            <input
                    type="text"
                    name="name"
                    id="name"
                    required
                    placeholder="Tu nombre completo"
                    class="w-full px-5 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-400 transition"
            />
        </div>

        <div>
            <label for="email" class="block mb-2 font-semibold text-gray-700">Correo electrónico</label>
            <input
                    type="email"
                    name="email"
                    id="email"
                    required
                    placeholder="ejemplo@correo.com"
                    class="w-full px-5 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-400 transition"
            />
        </div>

        <div>
            <label for="message" class="block mb-2 font-semibold text-gray-700">Mensaje</label>
            <textarea
                    name="message"
                    id="message"
                    rows="6"
                    required
                    placeholder="Escribe tu mensaje aquí..."
                    class="w-full px-5 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-400 transition resize-none"
            ></textarea>
        </div>

        <button
                type="submit"
                class="w-full bg-blue-500 text-white font-bold py-3 rounded-xl hover:bg-blue-600 transition-colors shadow-md cursor-pointer"
        >
            Enviar Mensaje
        </button>
    </form>
</div>

