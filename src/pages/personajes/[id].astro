---
// src/pages/personajes/[id].astro
import type { Character } from "../../types/simpsons";
import Layout from "../../layouts/Layout.astro";

export async function getStaticPaths() {
  const response = await fetch("https://thesimpsonsapi.com/api/characters");
  const data = await response.json();
  
  return data.results.map((character: Character) => ({
    params: { id: character.id.toString() },
    props: { character }
  }));
}

interface Props {
  character: Character;
}

const { character } = Astro.props as Props;
---

<Layout>
  <div class="container mx-auto px-4 py-8">

    <div class="bg-white rounded-2xl border-2 border-gray-200 shadow-xl p-4 max-w-4xl mx-auto">
      <div class="grid md:grid-cols-2 gap-4">
        <!-- Imagen -->
        <div class="flex items-center justify-center">
          <img
            src={`https://cdn.thesimpsonsapi.com/500${character.portrait_path}`}
            alt={character.name}
            class="rounded-2xl shadow-lg w-full max-w-xs object-contain"
          />
        </div>

        <!-- Información -->
        <div class="space-y-4">
          <h1 class="text-3xl font-bold text-gray-800">{character.name}</h1>

          <div class="space-y-2 text-gray-700">
            <p class="text-base">
              <span class="font-semibold">Edad:</span> {character.age} años
            </p>

            <p class="text-base">
              <span class="font-semibold">Fecha de nacimiento:</span>{" "}
              {character.birthdate}
            </p>

            <p class="text-base">
              <span class="font-semibold">Género:</span> {character.gender}
            </p>

            <p class="text-base">
              <span class="font-semibold">Estado:</span> {character.status}
            </p>

            <p class="text-base">
              <span class="font-semibold">Ocupación:</span> {character.occupation}
            </p>
          </div>

          <!-- Frases célebres -->
          <div class="mt-4">
            <h2 class="text-xl font-bold text-gray-800 mb-3">
              Frases célebres
            </h2>
            <div class="space-y-2">
              {character.phrases.map((phrase: string) => (
                <p class="text-gray-600 text-sm">• "{phrase}"</p>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>